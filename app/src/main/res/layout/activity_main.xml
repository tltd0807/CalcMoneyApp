<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CÔNG CỤ TÍNH LÃI TIỀN GỬI"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelSoTienGui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tiền gửi *" />

        <EditText
            android:id="@+id/tbSoTienGui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"/>

        <TextView
            android:id="@+id/labelLaiSuatGui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lãi suất gửi *" />

        <EditText
            android:id="@+id/tbLaiSuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/labelKyHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kỳ hạn gửi" />

        <EditText
            android:id="@+id/tbKyHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchSecondActivity"
            android:text="XEM KẾT QUẢ" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>